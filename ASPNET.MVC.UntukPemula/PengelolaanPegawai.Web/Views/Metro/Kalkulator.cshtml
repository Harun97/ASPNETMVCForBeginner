<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header" data-original-title>
            <h2><i class="halflings-icon edit"></i><span class="break"></span>Form Latihan</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>
        <div class="box-content">
            @using (Html.BeginForm("Kalkulator", "Metro", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.Label("TextBoxBil1", "Bilangan 1");
                @Html.TextBox("TextBoxBil1", String.Empty)
                <br />
                @Html.Label("TextBoxBil2", "Bilangan 2");
                @Html.TextBox("TextBoxBil2", String.Empty)
                <br />
                <label>Hasil :</label> @ViewBag.Hasil
                <button type="submit">Simpan</button>
            }
        </div>
    </div>
</div>